{
  "name": "Node.js Webserver",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "runArgs": ["--privileged", "--security-opt=label=disable"],
  "containerEnv": {
    "BUILDAH_ISOLATION": "chroot"
  },
  "features": {},
  "forwardPorts": [3000, 5000, 8080],
  "postCreateCommand": "npm install -g serve",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
