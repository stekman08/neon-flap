{
  "name": "neon-flap",
  "version": "1.0.0",
  "type": "module",
  "description": "A flashy Flappy Bird clone served via Node.js",
  "main": "server.js",
  "scripts": {
    "prestart": "node scripts/generate-version.js",
    "start": "node server.js",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:coverage:all": "npm run test:coverage && npm run test:e2e && npm run coverage:merge && npm run coverage:report",
    "coverage:merge": "node scripts/merge-coverage.js",
    "coverage:report": "npx nyc report --reporter=text --reporter=html --temp-dir=coverage/merged",
    "test:ui": "vitest --ui",
    "test:bench": "vitest bench --config vitest.bench.config.js",
    "prepare": "husky"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "c8": "^10.1.3",
    "canvas": "^3.2.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "nyc": "^17.1.0",
    "v8-to-istanbul": "^9.3.0",
    "vitest": "^4.0.13"
  }
}
