{
  "name": "flappy-bird-clone",
  "version": "1.0.0",
  "description": "A flashy Flappy Bird clone served via Node.js",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepare": "husky"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "c8": "^10.1.3",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "vitest": "^4.0.13"
  }
}
